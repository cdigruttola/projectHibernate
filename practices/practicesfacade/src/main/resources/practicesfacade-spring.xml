<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:practicescore-spring.xml"/>

    <bean class="org.modelmapper.ModelMapper" id="modelMapper" />

    <bean id="customerFacade" class="it.cdigruttola.practices.facade.impl.CustomerFacadeImpl">
        <property name="customerService" ref="customerService"/>
        <property name="modelMapper" ref="modelMapper" />
    </bean>

</beans>