<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:hibernate.cfg.xml"/>

    <bean id="genericDao" class="it.cdigruttola.practices.core.dao.impl.GenericDaoImpl" abstract="true">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="customerDao" class="it.cdigruttola.practices.core.dao.impl.CustomerDaoImpl" parent="genericDao"/>

    <bean id="practiceDao" class="it.cdigruttola.practices.core.dao.impl.PracticeDaoImpl" parent="genericDao"/>

    <bean id="employeeDao" class="it.cdigruttola.practices.core.dao.impl.EmployeeDaoImpl" parent="genericDao"/>

    <bean id="modelService" class="it.cdigruttola.practices.core.service.impl.ModelServiceImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="customerService" class="it.cdigruttola.practices.core.service.impl.CustomerServiceImpl">
        <property name="customerDao" ref="customerDao"/>
    </bean>

    <bean id="practiceService" class="it.cdigruttola.practices.core.service.impl.PracticeServiceImpl">
        <property name="practiceDao" ref="practiceDao"/>
    </bean>

</beans>