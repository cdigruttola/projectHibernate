<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="it.cdigruttola.practices.model.CommentModel" table="comments">
        <id name="pk" type="java.lang.String">
            <generator class="uuid"/>
        </id>
        <property name="date" type="java.sql.Date"/>
        <property name="text" type="java.lang.String"/>
        <many-to-one name="activity" class="it.cdigruttola.practices.model.ActivityModel"/>
        <many-to-one name="employee" class="it.cdigruttola.practices.model.EmployeeModel"/>
    </class>
</hibernate-mapping>
